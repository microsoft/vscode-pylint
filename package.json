{
    "name": "pylint",
    "displayName": "Pylint",
    "description": "%extension.description%",
    "version": "2023.5.0-dev",
    "preview": true,
    "serverInfo": {
        "name": "Pylint",
        "module": "pylint"
    },
    "publisher": "ms-python",
    "license": "MIT",
    "homepage": "https://github.com/Microsoft/vscode-pylint",
    "repository": {
        "type": "git",
        "url": "https://github.com/microsoft/vscode-pylint.git"
    },
    "bugs": {
        "url": "https://github.com/Microsoft/vscode-pylint/issues"
    },
    "icon": "icon.png",
    "galleryBanner": {
        "color": "#1e415e",
        "theme": "dark"
    },
    "keywords": [
        "python",
        "linting",
        "pylint"
    ],
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Programming Languages",
        "Linters"
    ],
    "extensionDependencies": [
        "ms-python.python"
    ],
    "activationEvents": [
        "onLanguage:python",
        "workspaceContains:.pylintrc",
        "workspaceContains:*.py"
    ],
    "main": "./dist/extension.js",
    "l10n": "./l10n",
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool source-map --config ./webpack.config.js",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "format-check": "prettier --check 'src/**/*.ts' 'build/**/*.yml' '.github/**/*.yml'",
        "test": "node ./out/test/runTest.js",
        "vsce-package": "vsce package -o pylint.vsix"
    },
    "contributes": {
        "languages": [
            {
                "filenames": [
                    ".pylintrc"
                ],
                "id": "ini"
            }
        ],
        "configuration": {
            "properties": {
                "pylint.args": {
                    "default": [],
                    "description": "%settings.args.description%",
                    "items": {
                        "type": "string"
                    },
                    "scope": "resource",
                    "type": "array"
                },
                "pylint.importStrategy": {
                    "default": "useBundled",
                    "description": "%settings.importStrategy.description%",
                    "enum": [
                        "useBundled",
                        "fromEnvironment"
                    ],
                    "enumDescriptions": [
                        "%settings.importStrategy.useBundled.description%",
                        "%settings.importStrategy.fromEnvironment.description%"
                    ],
                    "scope": "window",
                    "type": "string"
                },
                "pylint.interpreter": {
                    "default": [],
                    "description": "%settings.interpreter.description%",
                    "scope": "window",
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                },
                "pylint.path": {
                    "default": [],
                    "description": "%settings.path.description%",
                    "scope": "resource",
                    "items": {
                        "type": "string"
                    },
                    "type": "array",
                    "examples": [
                        [
                            "~/global_env/pylint"
                        ],
                        [
                            "~/.env/python",
                            "-m",
                            "pylint"
                        ]
                    ]
                },
                "pylint.severity": {
                    "default": {
                        "convention": "Information",
                        "error": "Error",
                        "fatal": "Error",
                        "refactor": "Hint",
                        "warning": "Warning",
                        "info": "Information"
                    },
                    "additionalProperties": {
                        "type": "string",
                        "enum": [
                            "Error",
                            "Hint",
                            "Information",
                            "Warning"
                        ]
                    },
                    "description": "%settings.severity.description%",
                    "scope": "resource",
                    "type": "object"
                },
                "pylint.showNotifications": {
                    "default": "off",
                    "description": "%settings.showNotifications.description%",
                    "enum": [
                        "off",
                        "onError",
                        "onWarning",
                        "always"
                    ],
                    "enumDescriptions": [
                        "%settings.showNotifications.off.description%",
                        "%settings.showNotifications.onError.description%",
                        "%settings.showNotifications.onWarning.description%",
                        "%settings.showNotifications.always.description%"
                    ],
                    "scope": "machine",
                    "type": "string"
                }
            }
        },
        "commands": [
            {
                "title": "%command.restartServer%",
                "category": "Pylint",
                "command": "pylint.restart"
            }
        ]
    },
    "dependencies": {
        "fs-extra": "^11.1.1",
        "vscode-languageclient": "^8.1.0"
    },
    "devDependencies": {
        "@types/fs-extra": "^11.0.1",
        "@types/glob": "^8.1.0",
        "@types/node": "14.x",
        "@types/vscode": "^1.74.0",
        "@typescript-eslint/eslint-plugin": "^5.59.2",
        "@typescript-eslint/parser": "^5.57.0",
        "@vscode/test-electron": "^2.3.0",
        "@vscode/vsce": "^2.18.0",
        "eslint": "^8.37.0",
        "glob": "^9.3.2",
        "prettier": "^2.8.7",
        "ts-loader": "^9.4.2",
        "typescript": "^5.0.2",
        "webpack": "^5.77.0",
        "webpack-cli": "^5.0.1"
    }
}
