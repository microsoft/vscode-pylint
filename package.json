{
    "name": "pylint",
    "displayName": "Pylint",
    "description": "%extension.description%",
    "version": "2023.7.0-dev",
    "preview": true,
    "serverInfo": {
        "name": "Pylint",
        "module": "pylint"
    },
    "publisher": "ms-python",
    "license": "MIT",
    "homepage": "https://github.com/Microsoft/vscode-pylint",
    "repository": {
        "type": "git",
        "url": "https://github.com/microsoft/vscode-pylint.git"
    },
    "bugs": {
        "url": "https://github.com/Microsoft/vscode-pylint/issues"
    },
    "icon": "icon.png",
    "galleryBanner": {
        "color": "#1e415e",
        "theme": "dark"
    },
    "keywords": [
        "python",
        "linting",
        "pylint"
    ],
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Programming Languages",
        "Linters"
    ],
    "extensionDependencies": [
        "ms-python.python"
    ],
    "capabilities": {
        "virtualWorkspaces": {
            "supported": false,
            "description": "Virtual Workspaces are not supported with pylint."
        }
    },
    "activationEvents": [
        "onLanguage:python",
        "workspaceContains:.pylintrc",
        "workspaceContains:*.py"
    ],
    "main": "./dist/extension.js",
    "l10n": "./l10n",
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool source-map --config ./webpack.config.js",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile",
        "lint": "eslint src --ext ts",
        "format-check": "prettier --check 'src/**/*.ts' 'build/**/*.yml' '.github/**/*.yml'",
        "tests": "node ./out/test/ts_tests/runTest.js",
        "vsce-package": "vsce package -o pylint.vsix"
    },
    "contributes": {
        "languages": [
            {
                "filenames": [
                    ".pylintrc"
                ],
                "id": "ini"
            }
        ],
        "configuration": {
            "properties": {
                "pylint.args": {
                    "default": [],
                    "description": "%settings.args.description%",
                    "items": {
                        "type": "string"
                    },
                    "scope": "resource",
                    "type": "array"
                },
                "pylint.importStrategy": {
                    "default": "useBundled",
                    "description": "%settings.importStrategy.description%",
                    "enum": [
                        "useBundled",
                        "fromEnvironment"
                    ],
                    "enumDescriptions": [
                        "%settings.importStrategy.useBundled.description%",
                        "%settings.importStrategy.fromEnvironment.description%"
                    ],
                    "scope": "window",
                    "type": "string"
                },
                "pylint.interpreter": {
                    "default": [],
                    "description": "%settings.interpreter.description%",
                    "scope": "resource",
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                },
                "pylint.lintOnChange": {
                    "default": false,
                    "description": "%settings.onChange.description%",
                    "scope": "machine",
                    "type": "boolean",
                    "tags": [
                        "experimental"
                    ]
                },
                "pylint.path": {
                    "default": [],
                    "description": "%settings.path.description%",
                    "scope": "resource",
                    "items": {
                        "type": "string"
                    },
                    "type": "array",
                    "examples": [
                        [
                            "~/global_env/pylint"
                        ],
                        [
                            "~/.env/python",
                            "-m",
                            "pylint"
                        ]
                    ]
                },
                "pylint.severity": {
                    "default": {
                        "convention": "Information",
                        "error": "Error",
                        "fatal": "Error",
                        "refactor": "Hint",
                        "warning": "Warning",
                        "info": "Information"
                    },
                    "additionalProperties": {
                        "type": "string",
                        "enum": [
                            "Error",
                            "Hint",
                            "Information",
                            "Warning"
                        ]
                    },
                    "description": "%settings.severity.description%",
                    "scope": "resource",
                    "type": "object"
                },
                "pylint.showNotifications": {
                    "default": "off",
                    "description": "%settings.showNotifications.description%",
                    "enum": [
                        "off",
                        "onError",
                        "onWarning",
                        "always"
                    ],
                    "enumDescriptions": [
                        "%settings.showNotifications.off.description%",
                        "%settings.showNotifications.onError.description%",
                        "%settings.showNotifications.onWarning.description%",
                        "%settings.showNotifications.always.description%"
                    ],
                    "scope": "machine",
                    "type": "string"
                }
            }
        },
        "commands": [
            {
                "title": "%command.restartServer%",
                "category": "Pylint",
                "command": "pylint.restart"
            }
        ]
    },
    "dependencies": {
        "@vscode/python-extension": "^1.0.2",
        "fs-extra": "^11.1.1",
        "vscode-languageclient": "^8.1.0"
    },
    "devDependencies": {
        "@types/chai": "^4.3.5",
        "@types/fs-extra": "^11.0.1",
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "16.x",
        "@types/sinon": "^10.0.16",
        "@types/vscode": "^1.74.0",
        "@typescript-eslint/eslint-plugin": "^6.2.1",
        "@typescript-eslint/parser": "^6.2.1",
        "@vscode/test-electron": "^2.3.4",
        "@vscode/vsce": "^2.20.0",
        "chai": "^4.3.7",
        "eslint": "^8.46.0",
        "glob": "^10.3.3",
        "mocha": "^10.2.0",
        "prettier": "^3.0.0",
        "sinon": "^15.2.0",
        "ts-loader": "^9.4.4",
        "typemoq": "^2.1.0",
        "typescript": "^5.1.6",
        "webpack": "^5.88.2",
        "webpack-cli": "^5.1.4"
    }
}
